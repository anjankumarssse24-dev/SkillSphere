<mvc:View
    controllerName="skillsphere.controller.EmployeeDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap">

    <uxap:ObjectPageLayout id="employeeObjectPage">
        <uxap:headerTitle>
            <uxap:ObjectPageHeader id="employeeHeader" objectTitle="{currentUser>/name}" objectSubtitle="Employee Dashboard">
                <uxap:actions>
                    <m:Button id="logoutBtn" text="Logout" icon="sap-icon://log" press="onLogout"/>
                </uxap:actions>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>

        <uxap:sections>
            <!-- Profile Section -->
            <uxap:ObjectPageSection id="profileSection" title="Profile Information" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="profileSubSection">
                        <uxap:blocks>
                            <f:Card id="profileCard" class="sapUiMediumMargin" width="94%">
                                <f:content>
                                    <m:VBox id="profileVBox" class="sapUiMediumMargin">
                                        <m:HBox id="profileHBox1" class="sapUiSmallMarginBottom">
                                            <m:Label id="empIdLabel" text="Employee ID: " class="sapUiSmallMarginEnd"/>
                                            <m:Text id="empIdText" text="{currentUser>/id}"/>
                                        </m:HBox>
                                        <m:HBox id="profileHBox2" class="sapUiSmallMarginBottom">
                                            <m:Label id="teamLabel" text="Team: " class="sapUiSmallMarginEnd"/>
                                            <m:Text id="teamText" text="{currentUser>/team}"/>
                                        </m:HBox>
                                        <m:HBox id="profileHBox3" class="sapUiSmallMarginBottom">
                                            <m:Label id="managerLabel" text="Manager: " class="sapUiSmallMarginEnd"/>
                                            <m:Text id="managerText" text="{currentUser>/manager}"/>
                                        </m:HBox>
                                        <m:HBox id="profileHBox4">
                                            <m:Label id="emailLabel" text="Email: " class="sapUiSmallMarginEnd"/>
                                            <m:Text id="emailText" text="{currentUser>/email}"/>
                                        </m:HBox>
                                    </m:VBox>
                                </f:content>
                            </f:Card>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Employee Profile Management Section -->
            <uxap:ObjectPageSection id="profileManagementSection" title="Profile Management" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="profileManagementSubSection">
                        <uxap:blocks>
                            <f:Card id="profileManagementCard" class="sapUiMediumMargin" width="96%">
                                <f:content>
                                    <m:VBox id="profileManagementVBox" class="sapUiMediumMargin" width="100%">
                                        <m:Title text="Update Your Professional Profile" level="H3" class="sapUiMediumMarginBottom"/>
                                        
                                        <!-- Row 1: Role and Location with proper spacing -->
                                        <m:FlexBox id="profileRow1" 
                                            direction="Row" 
                                            justifyContent="SpaceBetween" 
                                            class="sapUiSmallMarginBottom"
                                            width="100%">
                                            <!-- Role Field -->
                                            <m:VBox id="roleBox" width="48%">
                                                <m:Label id="roleLabel" text="Role" class="sapUiTinyMarginBottom" required="true"/>
                                                <m:Select id="roleSelect" 
                                                    selectedKey="{profile>/role}" 
                                                    width="100%"
                                                    class="sapUiMediumMarginBottom">
                                                    <core:Item key="" text="-- Select Role --"/>
                                                    <core:Item key="Developer" text="Developer"/>
                                                    <core:Item key="Architect" text="Architect"/>
                                                    <core:Item key="Backend Developer" text="Backend Developer"/>
                                                    <core:Item key="Frontend Developer" text="Frontend Developer"/>
                                                    <core:Item key="Full Stack Developer" text="Full Stack Developer"/>
                                                    <core:Item key="AI/ML Engineer" text="AI/ML Engineer"/>
                                                    <core:Item key="Data Scientist" text="Data Scientist"/>
                                                    <core:Item key="DevOps Engineer" text="DevOps Engineer"/>
                                                    <core:Item key="QA Engineer" text="QA Engineer"/>
                                                    <core:Item key="Solution Architect" text="Solution Architect"/>
                                                </m:Select>
                                            </m:VBox>

                                            <!-- Location Field -->
                                            <m:VBox id="locationBox" width="48%">
                                                <m:Label id="locationLabel" text="Location" class="sapUiTinyMarginBottom" required="true"/>
                                                <m:Select id="locationSelect" 
                                                    selectedKey="{profile>/location}" 
                                                    width="100%"
                                                    class="sapUiMediumMarginBottom">
                                                    <core:Item key="" text="-- Select Location --"/>
                                                    <core:Item key="Whitefield, Bangalore" text="Whitefield, Bangalore"/>
                                                    <core:Item key="Devanahalli Campuses, Bangalore" text="Devanahalli Campuses, Bangalore"/>
                                                    <core:Item key="Gurugram" text="Gurugram"/>
                                                    <core:Item key="Mumbai" text="Mumbai"/>
                                                    <core:Item key="Pune" text="Pune"/>
                                                    <core:Item key="Hyderabad" text="Hyderabad"/>
                                                </m:Select>
                                            </m:VBox>
                                        </m:FlexBox>

                                        <!-- Row 2: T Level and Specialization with proper spacing -->
                                        <m:FlexBox id="profileRow2" 
                                            direction="Row" 
                                            justifyContent="SpaceBetween" 
                                            class="sapUiSmallMarginBottom"
                                            width="100%">
                                            <!-- T Level Field -->
                                            <m:VBox id="tLevelBox" width="48%">
                                                <m:Label id="tLevelLabel" text="T Level" class="sapUiTinyMarginBottom" required="true"/>
                                                <m:Select id="tLevelSelect" 
                                                    selectedKey="{profile>/tLevel}" 
                                                    width="100%"
                                                    class="sapUiMediumMarginBottom">
                                                    <core:Item key="" text="-- Select T Level --"/>
                                                    <core:Item key="T1" text="T1"/>
                                                    <core:Item key="T2" text="T2"/>
                                                    <core:Item key="T3" text="T3"/>
                                                    <core:Item key="T4" text="T4"/>
                                                </m:Select>
                                            </m:VBox>
                                            
                                            <!-- Specialization Field -->
                                            <m:VBox id="specializationBox" width="48%">
                                                <m:Label id="specializationLabel" text="Specialization" class="sapUiTinyMarginBottom" required="true"/>
                                                <m:Select id="specializationSelect" 
                                                    selectedKey="{profile>/specialization}" 
                                                    width="100%"
                                                    class="sapUiMediumMarginBottom">
                                                    <core:Item key="ABAP Developer" text="ABAP Developer"/>
                                                    <core:Item key="Data Science" text="Data Science"/>
                                                    <core:Item key="AI/Machine Learning" text="AI/Machine Learning"/>
                                                    <core:Item key="SAPUI5 Developer" text="SAPUI5 Developer"/>
                                                    <core:Item key="SAP HANA Developer" text="SAP HANA Developer"/>
                                                    <core:Item key="SAP BTP Developer" text="SAP BTP Developer"/>
                                                    <core:Item key="SAP Integration" text="SAP Integration"/>
                                                    <core:Item key="SAP Analytics" text="SAP Analytics"/>
                                                    <core:Item key="SAP Security" text="SAP Security"/>
                                                    <core:Item key="SAP Basis" text="SAP Basis"/>
                                                    <core:Item key="Full Stack Developer" text="Full Stack Developer"/>
                                                    <core:Item key="DevOps Engineer" text="DevOps Engineer"/>
                                                </m:Select>
                                            </m:VBox>
                                        </m:FlexBox>

                                        <!-- Action Button -->
                                        <m:FlexBox id="profileActionBox" 
                                            justifyContent="End" 
                                            class="sapUiMediumMarginTop"
                                            width="100%">
                                            <m:Button id="saveProfileBtn" 
                                                text="Save Profile" 
                                                type="Emphasized" 
                                                icon="sap-icon://save" 
                                                press="onSaveProfile"/>
                                        </m:FlexBox>
                                    </m:VBox>
                                </f:content>
                            </f:Card>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Utilization Management Section -->
            <uxap:ObjectPageSection id="utilizationSection" title="Utilization Management" titleUppercase="false">
                <uxap:subSections>
                    <!-- Current Project Subsection -->
                    <uxap:ObjectPageSubSection id="currentProjectSubSection" title="Current Project">
                        <uxap:blocks>
                            <f:Card id="currentProjectCard" class="sapUiMediumMargin" width="94%">
                                <f:content>
                                    <m:VBox id="currentProjectVBox" class="sapUiMediumMargin">
                                        <m:Toolbar id="currentProjectToolbar">
                                            <m:Title id="currentProjectTitle" text="Current Project Utilization"/>
                                            <m:ToolbarSpacer id="currentProjectToolbarSpacer"/>
                                            <m:Button id="addCurrentProjectBtn" text="Mark Utilization" icon="sap-icon://add" type="Emphasized" press="onMarkCurrentProject"/>
                                        </m:Toolbar>
                                        
                                        <m:Table id="currentProjectTable" items="{currentProjects>/data}" class="sapUiSmallMarginTop">
                                            <m:columns>
                                                <m:Column id="currentProjectNameCol">
                                                    <m:Text id="currentProjectNameHeader" text="Project Name"/>
                                                </m:Column>
                                                <m:Column id="currentProjectStartCol">
                                                    <m:Text id="currentProjectStartHeader" text="Start Date"/>
                                                </m:Column>
                                                <m:Column id="currentProjectEndCol">
                                                    <m:Text id="currentProjectEndHeader" text="End Date"/>
                                                </m:Column>
                                                <m:Column id="currentProjectHoursPerDayCol">
                                                    <m:Text id="currentProjectHoursPerDayHeader" text="Hours per Day"/>
                                                </m:Column>
                                                <m:Column id="currentProjectActionsCol" width="150px">
                                                    <m:Text id="currentProjectActionsHeader" text="Actions"/>
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem id="currentProjectItem">
                                                    <m:cells>
                                                        <m:Text id="currentProjectNameText" text="{currentProjects>projectName}"/>
                                                        <m:Text id="currentProjectStartText" text="{currentProjects>startDate}"/>
                                                        <m:Text id="currentProjectEndText" text="{currentProjects>endDate}"/>
                                                        <m:Text id="currentProjectHoursPerDayText" text="{currentProjects>hoursPerDay}"/>
                                                        <m:HBox id="currentProjectActionBox">
                                                            <m:Button id="editCurrentProjectBtn" icon="sap-icon://edit" press="onEditCurrentProject" tooltip="Edit Current Project"/>
                                                            <m:Button id="deleteCurrentProjectBtn" icon="sap-icon://delete" type="Reject" press="onDeleteCurrentProject" tooltip="Delete Current Project"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </m:VBox>
                                </f:content>
                            </f:Card>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>

                    <!-- CAIA (Internal Utilization) Subsection -->
                    <uxap:ObjectPageSubSection id="caiaSubSection" title="CAIA (Internal Utilization)">
                        <uxap:blocks>
                            <f:Card id="caiaCard" class="sapUiMediumMargin" width="94%">
                                <f:content>
                                    <m:VBox id="caiaVBox" class="sapUiMediumMargin">
                                        <m:Toolbar id="caiaToolbar">
                                            <m:Title id="caiaTitle" text="CAIA Internal Tasks"/>
                                            <m:ToolbarSpacer id="caiaToolbarSpacer"/>
                                            <m:Button id="addCaiaBtn" text="Mark Utilization" icon="sap-icon://add" type="Emphasized" press="onMarkCAIA"/>
                                        </m:Toolbar>
                                        
                                        <m:Table id="caiaTable" items="{caia>/data}" class="sapUiSmallMarginTop">
                                            <m:columns>
                                                <m:Column id="caiaTaskCol">
                                                    <m:Text id="caiaTaskHeader" text="Task Name"/>
                                                </m:Column>
                                                <m:Column id="caiaStartCol">
                                                    <m:Text id="caiaStartHeader" text="Start Date"/>
                                                </m:Column>
                                                <m:Column id="caiaEndCol">
                                                    <m:Text id="caiaEndHeader" text="End Date"/>
                                                </m:Column>
                                                <m:Column id="caiaHoursPerDayCol">
                                                    <m:Text id="caiaHoursPerDayHeader" text="Hours per Day"/>
                                                </m:Column>
                                                <m:Column id="caiaActionsCol" width="150px">
                                                    <m:Text id="caiaActionsHeader" text="Actions"/>
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem id="caiaItem">
                                                    <m:cells>
                                                        <m:Text id="caiaTaskText" text="{caia>taskName}"/>
                                                        <m:Text id="caiaStartText" text="{caia>startDate}"/>
                                                        <m:Text id="caiaEndText" text="{caia>endDate}"/>
                                                        <m:Text id="caiaHoursPerDayText" text="{caia>hoursPerDay}"/>
                                                        <m:HBox id="caiaActionBox">
                                                            <m:Button id="editCaiaBtn" icon="sap-icon://edit" press="onEditCAIA" tooltip="Edit CAIA Utilization"/>
                                                            <m:Button id="deleteCaiaBtn" icon="sap-icon://delete" type="Reject" press="onDeleteCAIA" tooltip="Delete CAIA Utilization"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </m:VBox>
                                </f:content>
                            </f:Card>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>

                    <!-- POC Utilization Subsection -->
                    <uxap:ObjectPageSubSection id="pocSubSection" title="POC Utilization">
                        <uxap:blocks>
                            <f:Card id="pocCard" class="sapUiMediumMargin" width="94%">
                                <f:content>
                                    <m:VBox id="pocVBox" class="sapUiMediumMargin">
                                        <m:Toolbar id="pocToolbar">
                                            <m:Title id="pocTitle" text="POC/Proof of Concept"/>
                                            <m:ToolbarSpacer id="pocToolbarSpacer"/>
                                            <m:Button id="addPocBtn" text="Mark Utilization" icon="sap-icon://add" type="Emphasized" press="onMarkPOC"/>
                                        </m:Toolbar>
                                        
                                        <m:Table id="pocTable" items="{poc>/data}" class="sapUiSmallMarginTop">
                                            <m:columns>
                                                <m:Column id="pocTitleCol">
                                                    <m:Text id="pocTitleHeader" text="POC Title"/>
                                                </m:Column>
                                                <m:Column id="pocStartCol">
                                                    <m:Text id="pocStartHeader" text="Start Date"/>
                                                </m:Column>
                                                <m:Column id="pocEndCol">
                                                    <m:Text id="pocEndHeader" text="End Date"/>
                                                </m:Column>
                                                <m:Column id="pocHoursPerDayCol">
                                                    <m:Text id="pocHoursPerDayHeader" text="Hours per Day"/>
                                                </m:Column>
                                                <m:Column id="pocActionsCol" width="150px">
                                                    <m:Text id="pocActionsHeader" text="Actions"/>
                                                </m:Column>
                                            </m:columns>
                                            <m:items>
                                                <m:ColumnListItem id="pocItem">
                                                    <m:cells>
                                                        <m:Text id="pocTitleText" text="{poc>pocTitle}"/>
                                                        <m:Text id="pocStartText" text="{poc>startDate}"/>
                                                        <m:Text id="pocEndText" text="{poc>endDate}"/>
                                                        <m:Text id="pocHoursPerDayText" text="{poc>hoursPerDay}"/>
                                                        <m:HBox id="pocActionBox">
                                                            <m:Button id="editPocBtn" icon="sap-icon://edit" press="onEditPOC" tooltip="Edit POC Utilization"/>
                                                            <m:Button id="deletePocBtn" icon="sap-icon://delete" type="Reject" press="onDeletePOC" tooltip="Delete POC Utilization"/>
                                                        </m:HBox>
                                                    </m:cells>
                                                </m:ColumnListItem>
                                            </m:items>
                                        </m:Table>
                                    </m:VBox>
                                </f:content>
                            </f:Card>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Skills Section -->
            <uxap:ObjectPageSection id="skillsSection" title="My Skills" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="skillsSubSection">
                        <uxap:blocks>
                            <m:VBox id="skillsVBox" class="sapUiMediumMargin">
                                <m:Toolbar id="skillsToolbar">
                                    <m:Title id="skillsTitle" text="Skills"/>
                                    <m:ToolbarSpacer id="skillsToolbarSpacer"/>
                                    <m:Button id="addSkillBtn" text="Add Skill" icon="sap-icon://add" type="Emphasized" press="onAddSkill"/>
                                </m:Toolbar>
                                
                                <m:Table id="skillsTable" items="{skills>/skills}" class="sapUiSmallMarginTop">
                                    <m:columns>
                                        <m:Column id="skillNameCol">
                                            <m:Text id="skillNameHeader" text="Skill Name"/>
                                        </m:Column>
                                        <m:Column id="categoryCol">
                                            <m:Text id="categoryHeader" text="Category"/>
                                        </m:Column>
                                        <m:Column id="proficiencyCol">
                                            <m:Text id="proficiencyHeader" text="Proficiency Level"/>
                                        </m:Column>
                                        <m:Column id="yearsCol">
                                            <m:Text id="yearsHeader" text="Years"/>
                                        </m:Column>
                                        <m:Column id="certificationCol">
                                            <m:Text id="certificationHeader" text="Certification"/>
                                        </m:Column>
                                        <m:Column id="skillActionsCol" width="150px">
                                            <m:Text id="skillActionsHeader" text="Actions"/>
                                        </m:Column>
                                    </m:columns>
                                    <m:items>
                                        <m:ColumnListItem id="skillItem">
                                            <m:Text id="skillNameText" text="{skills>skillName}"/>
                                            <m:Text id="categoryText" text="{skills>category}"/>
                                            <m:ObjectStatus id="proficiencyStatus" text="{skills>proficiencyLevel}" 
                                                state="{path: 'skills>proficiencyLevel', formatter: '.formatProficiencyState'}"/>
                                            <m:Text id="yearsText" text="{skills>yearsExperience}"/>
                                            <m:ObjectStatus id="certificationStatus" text="{skills>certificationStatus}"
                                                state="{path: 'skills>certificationStatus', formatter: '.formatCertificationState'}"/>
                                            <m:HBox id="skillActionsHBox">
                                                <m:Button id="editSkillBtn" icon="sap-icon://edit" press="onEditSkill" tooltip="Edit Skill"/>
                                                <m:Button id="deleteSkillBtn" icon="sap-icon://delete" type="Reject" press="onDeleteSkill" tooltip="Delete Skill"/>
                                            </m:HBox>
                                        </m:ColumnListItem>
                                    </m:items>
                                </m:Table>
                            </m:VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Projects Section -->
            <uxap:ObjectPageSection id="projectsSection" title="My Projects" titleUppercase="false">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="projectsSubSection">
                        <uxap:blocks>
                            <m:VBox id="projectsVBox" class="sapUiMediumMargin">
                                <m:Toolbar id="projectsToolbar">
                                    <m:Title id="projectsTitle" text="Projects"/>
                                    <m:ToolbarSpacer id="projectsToolbarSpacer"/>
                                    <m:Button id="addProjectBtn" text="Add Project" icon="sap-icon://add" type="Emphasized" press="onAddProject"/>
                                </m:Toolbar>
                                
                                <m:Table id="projectsTable" items="{projects>/projects}" class="sapUiSmallMarginTop">
                                    <m:columns>
                                        <m:Column id="projectNameCol">
                                            <m:Text id="projectNameHeader" text="Project Name"/>
                                        </m:Column>
                                        <m:Column id="roleCol">
                                            <m:Text id="roleHeader" text="Role"/>
                                        </m:Column>
                                        <m:Column id="durationCol">
                                            <m:Text id="durationHeader" text="Duration"/>
                                        </m:Column>
                                        <m:Column id="projectManagerCol">
                                            <m:Text id="projectManagerHeader" text="Project Manager"/>
                                        </m:Column>
                                        <m:Column id="aemCol">
                                            <m:Text id="aemHeader" text="AEM"/>
                                        </m:Column>
                                        <m:Column id="lineManagerCol">
                                            <m:Text id="lineManagerHeader" text="Line Manager/POC"/>
                                        </m:Column>
                                        <m:Column id="orchestratorCol">
                                            <m:Text id="orchestratorHeader" text="Project Orchestrator"/>
                                        </m:Column>
                                        <m:Column id="projectActionsCol" width="150px">
                                            <m:Text id="projectActionsHeader" text="Actions"/>
                                        </m:Column>
                                    </m:columns>
                                    <m:items>
                                        <m:ColumnListItem id="projectItem">
                                            <m:Text id="projectNameText" text="{projects>projectName}"/>
                                            <m:Text id="roleText" text="{projects>role}"/>
                                            <m:Text id="durationText" text="{projects>duration}"/>
                                            <m:Text id="projectManagerText" text="{projects>projectManager}"/>
                                            <m:Text id="aemText" text="{projects>accountExecutiveManager}"/>
                                            <m:Text id="lineManagerText" text="{projects>lineManagerPOC}"/>
                                            <m:Text id="orchestratorText" text="{projects>projectOrchestrator}"/>
                                            <m:HBox id="projectActionsHBox">
                                                <m:Button id="editProjectBtn" icon="sap-icon://edit" press="onEditProject" tooltip="Edit Project"/>
                                                <m:Button id="deleteProjectBtn" icon="sap-icon://delete" type="Reject" press="onDeleteProject" tooltip="Delete Project"/>
                                            </m:HBox>
                                        </m:ColumnListItem>
                                    </m:items>
                                </m:Table>
                            </m:VBox>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>

</mvc:View>