<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog
        title="Add New Project"
        contentWidth="500px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Project Name:" />
                <Input
                    value="{newProject>/projectName}"
                    placeholder="Enter project name" />
                
                <Label text="Role:" />
                <Input
                    value="{newProject>/role}"
                    placeholder="Enter your role in the project" />
                
                <Label text="Start Date:" />
                <DatePicker
                    value="{newProject>/startDate}"
                    placeholder="Select start date" />
                
                <Label text="End Date:" />
                <DatePicker
                    value="{newProject>/endDate}"
                    placeholder="Select end date" />
                
                <Label text="Status:" />
                <Select
                    selectedKey="{newProject>/status}">
                    <core:Item key="Active" text="Active" />
                    <core:Item key="Completed" text="Completed" />
                    <core:Item key="On Hold" text="On Hold" />
                </Select>
                
                <Label text="Description:" />
                <TextArea
                    value="{newProject>/description}"
                    rows="3"
                    placeholder="Enter project description" />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveProject" />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCloseAddProjectDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>