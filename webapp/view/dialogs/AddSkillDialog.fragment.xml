<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        title="Add New Skill"
        contentWidth="400px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Skill Name:" />
                <Input
                    value="{newSkill>/skillName}"
                    placeholder="Enter skill name" />
                
                <Label text="Category:" />
                <Input
                    value="{newSkill>/category}"
                    placeholder="Enter category (e.g., Technical, Soft Skills)" />
                
                <Label text="Proficiency Level:" required="true" />
                <Select
                    id="proficiencySelect"
                    selectedKey="{newSkill>/proficiency}"
                    change="onProficiencyChange"
                    width="100%">
                    <core:Item key="" text="-- Select Proficiency Level --" />
                    <core:Item key="Beginner" text="Beginner" />
                    <core:Item key="Intermediate" text="Intermediate" />
                    <core:Item key="Proficient" text="Proficient" />
                </Select>
                
                <Label text="Years of Experience:" />
                <Input
                    id="yearsInput"
                    value="{newSkill>/yearsExperience}"
                    type="Number"
                    placeholder="Enter years of experience" />
                
                <Label text="Certification Status:" />
                <Select
                    id="certificationSelect"
                    selectedKey="{newSkill>/certificationStatus}"
                    change="onCertificationChange"
                    width="100%">
                    <core:Item key="" text="-- Select Status --" />
                    <core:Item key="None" text="None" />
                    <core:Item key="In Progress" text="In Progress" />
                    <core:Item key="Certified" text="Certified" />
                </Select>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveSkill" />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCloseAddSkillDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>