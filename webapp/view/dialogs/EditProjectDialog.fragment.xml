<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog
        title="Edit Project"
        contentWidth="600px">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Project Name:" required="true" />
                <Input
                    value="{editProject>/projectName}"
                    placeholder="Enter project name" />
                
                <Label text="Role:" required="true" />
                <Select selectedKey="{editProject>/role}" width="100%">
                    <core:Item key="" text="-- Select Role --"/>
                    <core:Item key="Developer" text="Developer"/>
                    <core:Item key="Architect" text="Architect"/>
                    <core:Item key="Backend Developer" text="Backend Developer"/>
                    <core:Item key="Frontend Developer" text="Frontend Developer"/>
                    <core:Item key="Full Stack Developer" text="Full Stack Developer"/>
                    <core:Item key="AI/ML Engineer" text="AI/ML Engineer"/>
                    <core:Item key="Data Scientist" text="Data Scientist"/>
                    <core:Item key="Data Analyst" text="Data Analyst"/>
                    <core:Item key="DevOps Engineer" text="DevOps Engineer"/>
                    <core:Item key="QA Engineer" text="QA Engineer"/>
                    <core:Item key="Test Engineer" text="Test Engineer"/>
                    <core:Item key="Solution Architect" text="Solution Architect"/>
                    <core:Item key="Integration Specialist" text="Integration Specialist"/>
                    <core:Item key="Tech Lead" text="Tech Lead"/>
                    <core:Item key="Project Manager" text="Project Manager"/>
                </Select>
                
                <!-- Project Management Fields -->
                <Label text="Project Manager:" class="sapUiSmallMarginTop" />
                <Input
                    value="{editProject>/projectManager}"
                    placeholder="Oversees complete project planning, execution, and delivery" />
                
                <Label text="Account Executive Manager (AEM):" />
                <Input
                    value="{editProject>/accountExecutiveManager}"
                    placeholder="Represents business stakeholders and validates project outcomes" />
                
                <Label text="Line Manager / POC:" />
                <Input
                    value="{editProject>/lineManagerPOC}"
                    placeholder="Supervises daily tasks, assigns sprint work, and mentors interns" />
                
                <Label text="Project Orchestrator:" />
                <Input
                    value="{editProject>/projectOrchestrator}"
                    placeholder="Coordinates frontend-backend integration and sprint alignment" />
                
                <Label text="Start Date:" class="sapUiSmallMarginTop" />
                <DatePicker
                    value="{editProject>/startDate}"
                    placeholder="Select start date" />
                
                <Label text="End Date:" />
                <DatePicker
                    value="{editProject>/endDate}"
                    placeholder="Select end date" />
                
                <Label text="Status:" />
                <Select
                    selectedKey="{editProject>/status}">
                    <core:Item key="Active" text="Active" />
                    <core:Item key="Completed" text="Completed" />
                    <core:Item key="On Hold" text="On Hold" />
                </Select>
                
                <Label text="Description:" />
                <TextArea
                    value="{editProject>/description}"
                    rows="3"
                    placeholder="Enter project description" />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Save"
                type="Emphasized"
                press="onSaveEditedProject" />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCloseEditProjectDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>